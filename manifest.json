{
    "manifest_version": 3,
  
    "name": "btc/eth",
    "description": "Show bitcoin/ethereum graphic",
    "version": "1.5",

    "action": {
        "default_title": "Show graphic",
        "default_popup": "dist/popup.html"
    },

    "permissions": [
        "storage"
    ],

    "host_permissions": [
        "https://api.coinbase.com/v2/prices/*"
    ]
}