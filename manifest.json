{
    "manifest_version": 3,
  
    "name": "btc/eth",
    "description": "Show bitcoin/ethereum graphic",
    "version": "1.5",

    "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    },

    "action": {
        "default_title": "Show graphic",
        "default_popup": "dist/index.html"
    },

    "permissions": [
        "storage"
    ],

    "host_permissions": [
        "https://api.coinbase.com/v2/prices/*"
    ]
}